<View>
  <Header value ="ABSA 標記" />
  
  <!-- Label section -->
  <View whenTagName="Relevance" 
        whenChoiceValue="包含評價性敘述"
        visibleWhen="choice-selected">
    <HyperTextLabels name="aspect-label" toName="text">
      <Label value="Entity" background="#428" hotkey="e"/>
      <Label value="Attribute" background="#482" hotkey="a"/>
      <Label value="Evaluation" background="#AA2" hotkey="v"/>
    </HyperTextLabels>  
  </View>
  
  
  <HyperText name="text" 
      value="
      用4G吃到飽很開心，還是看好+期待中華5G&lt;br/&gt;
      聽說很遠的那家也有吃到飽了&lt;br/&gt;
      不知道有沒有流量限制，之前爆流量後速度很杯具&lt;br/&gt;"/>
  
  <!-- Annotation detail -->
  <View 
      whenTagName="aspect-label"
      whenLabelValue="Evaluation"
      visibleWhen="region-selected"
      perRegion="true">
    
    <Relations>
      <Relation value = "pair1"/>
  	</Relations>
	
    <Header value="情緒極度" size="5" underline="true"/>
    <Header size="6"
            value="一顆星代表最非常負面，三顆星代表中性，五顆星代表非常正面。"/>
    <Rating name="sentiment" 
             toName="text"           
             maxRating="5"
             size="large"
             showInline ="true">
    </Rating>
  </View>
  
  <!-- Item-general interface -->
  <Choices name="Relevance" toName="text" choice="single-radio">
    <Choice value="包含評價性敘述" hotkey="1"/>
    <Choice value="無評價性敘述" hotkey="2"/>
    
  </Choices>        
  <TextArea name="memo" toName="text" 
            placeholder="其他附註"
            rows="3"/>
  
  
</View>